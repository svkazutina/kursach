@page
@model medicalclinic.Pages.Doctors.IndexModel
@{
    ViewData["Title"] = "Специалисты";
}
<head>
    <style>
    body {
        padding: 0px;
        margin-top:110px;
        margin-left: 0px;
        width: 100%;
        height: 100%;
    }

    .site {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: #ffffff;
    }

    .block{
        margin-left: 20px;
    }

    .formtitle {
        text-align: center;
        color: #1F2B42;
        font-size: 32px;
        font-family: Rubik;
        font-weight: 500;
        line-height: 56px;
        font-weight: bold;
    }
    .table tr:hover {
        background-color: #E8E9EC ;
    }
      
    </style>
</head>
<body>
    <div class="block">
        <div class="formtitle" style="font-size: 40px;">Специалисты</div>
        <form method="get" style="display: flex; align-items: center; gap: 10px;">
            <label for="SearchString" style="margin: 0;">Поиск:</label>
            <input type="text" class="form-control" id="SearchString" name="SearchString" value="@Model.SearchString" style=" width: 200px;" />
            <button type="submit" class="btn btn-primary" style="background-color:  #1F2B42; border: 0px">Найти</button>
        </form>
       <p>
            <a asp-page="Create" style="color: #1F2B42;">Создать нового</a>
       </p>
   </div>
     
   <table class="table">
        <thead>
                <tr>
                    <th>
                        Логин
                    </th>
                    <th>
                        Пароль
                    </th>
                    <th>
                        Фамилия
                    </th>
                    <th>
                        Имя
                    </th>
                    <th>
                        Отчество
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Doctors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Login)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patronymic)
                        </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" style="color:#1F2B42; background-color:white; padding: 3px 3px 3px 3px; border-radius: 4px">Редактировать</a>  
                        <a asp-page="./Details" asp-route-id="@item.Id" style="color:#1F2B42; background-color:white; padding: 3px 3px 3px 3px; border-radius: 4px">Детали</a>  
                        <a asp-page="./Delete" asp-route-id="@item.Id" style="color:#1F2B42; background-color:white; padding: 3px 3px 3px 3px; border-radius: 4px">Удалить</a>  
                        <a asp-page="/DoctorsSchedule/Edit" asp-route-id="@item.Id" style="color:#1F2B42; background-color:white; padding: 3px 3px 3px 3px; border-radius: 4px">Редактировать расписание</a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
